<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="48dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_filter_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|start"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="start|center_vertical"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintEnd_toStartOf="@+id/cb_filter_selected"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/javascript" />

    <CheckBox
        android:id="@+id/cb_filter_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|end"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_filter_name"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>